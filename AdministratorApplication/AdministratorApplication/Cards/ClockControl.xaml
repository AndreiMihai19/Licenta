<UserControl x:Class="AdministratorApplication.Cards.ClockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdministratorApplication.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="100">

    <Grid HorizontalAlignment="Stretch">
        <Rectangle Width="150" Height="70" Fill="#193b39" RadiusX="15" RadiusY="15"/>
        <TextBlock x:Name="clock"
               Text="00:00"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="30"
               FontFamily="Tahoma"
               Foreground="White"/>
    </Grid>
</UserControl>
